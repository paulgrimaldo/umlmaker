extends ../templates/default

block content
  div(class='row')
    div(class='col-md-6 col-md-offset-3')
      if message.length>0
        div(class='alert alert-success' role='alert')=message
      div(class='panel panel-default')
        div(class='panel-heading')= 'Login'
        div(class='panel-body')
          form(action='/auth/signin' method='post' autocomplete='on')
            div(class='form-group')
              label(for="email")= 'Email'
              input(type='email' name='username' id='email' placeholder='Email' class='form-control')
            div(class='form-group')
              label(for="password")= 'Password'
              input(type='password' name='password' id='password' placeholder='Password' class='form-control')
            button(type="submit" class='btn btn-default')= 'Iniciar sesion'
      if authmessage.length>0
              div(class='alert alert-danger' role='alert')=authmessage
